<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWaste"
    android:orientation="vertical"
    tools:context=".view.fragment.OrderByStatusFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/dp_5"
        android:layout_weight="2"
        android:background="@drawable/buttonitem">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/order_fm_status_tablayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_3"
            app:tabIndicatorHeight="@dimen/dp_0"
            app:tabSelectedTextColor="@color/colorAccent" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/orderByAllbage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/dp_6"
        android:layout_weight="8">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/all_order_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>


</LinearLayout>
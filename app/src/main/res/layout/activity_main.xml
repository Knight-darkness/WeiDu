<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start_0"
    android:gravity="bottom"
    android:orientation="vertical"
    tools:context=".view.activity.MainActivity">


    <TextView
        android:id="@+id/main_skip"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/iv_round"
        android:gravity="center"
        android:text="6"
        android:textColor="#F86F6F"
        android:textSize="25sp" />

    <com.wd.weidu.net.NumberProgressBar xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/numberbar1"
        style="@style/NumberProgressBar_Relax_Blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45dp"
        android:padding="20dp"
        custom:progress_current="0"></com.wd.weidu.net.NumberProgressBar>

</LinearLayout>